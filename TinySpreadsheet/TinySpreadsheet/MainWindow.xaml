<Window xmlns:TinySpreadsheet="clr-namespace:TinySpreadsheet"  x:Class="TinySpreadsheet.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
         xmlns:r="clr-namespace:Microsoft.Windows.Controls.Ribbon;assembly=RibbonControlsLibrary"
 
        Title="Tiny Spreadsheet" Height="768" Width="1024">
    <Grid>
        <Ribbon></Ribbon>
        <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto" ScrollChanged="ScrollViewer_OnScrollChanged">
        <StackPanel x:Name="RowStack" HorizontalAlignment="Left" Orientation="Horizontal" VerticalAlignment="Top">
           
        </StackPanel>
        </ScrollViewer>
    </Grid>
    </Window>
